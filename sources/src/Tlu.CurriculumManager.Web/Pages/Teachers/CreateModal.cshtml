@page
@model Tlu.CurriculumManager.Web.Pages.Teachers.CreateModalModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Tlu.CurriculumManager.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IHtmlLocalizer<CurriculumManagerResource> L
@{
    Layout = null;
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/Teachers/index.js" />
    </abp-script-bundle>
}

<abp-dynamic-form abp-model="Teacher" asp-page="/Teachers/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewTeacher"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
