@page
@model Tlu.CurriculumManager.Web.Pages.Outlines.IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Tlu.CurriculumManager.Localization
@inject IHtmlLocalizer<CurriculumManagerResource> L

@section scripts {
    <script>
            var allSchoolYears = @Html.Raw(ViewData["allSchoolYears"]);
            var allDocuments = @Html.Raw(ViewData["allDocuments"]);
    </script>
    <abp-script-bundle>
        <abp-script src="/Pages/Outlines/js/index.js" />
        <abp-script src="/Pages/Outlines/js/selectDocumentViewModal.js" />
    </abp-script-bundle>
}
@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/Outlines/css/index.css" />
    </abp-style-bundle>
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <h4>@L["Outlines"]</h4>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewOutlineButton" text="@L["New"].Value" icon="plus" button-type="Dark" />
            </abp-column>
        </abp-row>
        <abp-row>
            <abp-column size-md="_2" style="padding-top: 15px;">
                <select id="selectSchoolYear" class="form-control" data-bind="options: schoolYears, optionsText: 'text', optionsValue: 'value', value: selectedSchoolYear"></select>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <table class="table table-striped table-bordered" id="OutlinesTable">
            <thead>
                <tr>
                    <th>@L["ID"]</th>
                    <th>Học phần</th>
                    <th>Trạng thái</th>
                    <th>@L["Command"]</th>
                </tr>
            </thead>
        </table>
    </abp-card-body>
</abp-card>
