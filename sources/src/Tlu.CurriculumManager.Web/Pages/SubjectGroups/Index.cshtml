@page
@model Tlu.CurriculumManager.Web.Pages.SubjectGroups.IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Tlu.CurriculumManager.Localization
@inject IHtmlLocalizer<CurriculumManagerResource> L

@section scripts {
    <script>
        var allCurriculums = @Html.Raw(ViewData["allCurriculums"]);
        var allSubjectGroups = @Html.Raw(ViewData["allSubjectGroups"]);
    </script>
    <abp-script-bundle>
        <abp-script src="/Pages/SubjectGroups/index.js" />
        <abp-script src="/Pages/SubjectGroups/createViewModel.js" />
        <abp-script src="/Pages/SubjectGroups/editViewModel.js" />
    </abp-script-bundle>
}

@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/SubjectGroups/index.css" />
    </abp-style-bundle>
}

<abp-card>
    <abp-card-header>

        <abp-row>
            <abp-column size-md="_6">
                <h4>@L["SubjectGroups"]</h4>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewSubjectGroupButton" text="@L["New"].Value" icon="plus" button-type="Dark" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <table class="table table-striped table-bordered" id="SubjectGroupsTable">
            <thead>
                <tr>
                    <th>@L["ID"]</th>
                    <th>@L["Name"]</th>
                    <th>@L["Parent"]</th>
                    <th>@L["Note"]</th>
                    <th>@L["Curriculum"]</th>
                    <th>@L["SchoolYear"]</th>
                    <th>@L["DisplayOrder"]</th>
                    <th>@L["Command"]</th>
                </tr>
            </thead>
        </table>
    </abp-card-body>
</abp-card>
