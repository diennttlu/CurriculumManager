@page
@model Tlu.CurriculumManager.Web.Pages.Curriculums.DetailModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Tlu.CurriculumManager.Localization
@inject IHtmlLocalizer<CurriculumManagerResource> L

@{
}
@section scripts {
    <script>
        var allSchoolYears = @Html.Raw(ViewData["allSchoolYears"]);
    </script>
    <abp-script-bundle>
        <abp-script src="/Pages/Curriculums/detailViewModel.js" />
        <abp-script src="/Pages/Curriculums/detail.js" />
    </abp-script-bundle>
}

<abp-card>
    <abp-card-header></abp-card-header>
    <abp-card-body>
        <abp-row style="padding-bottom: 15px;">
            <abp-column size-md="_4" style="padding-top: 15px;">
                <select id="selectSchoolYear" class="form-control" data-bind="options: schoolYears, optionsText: 'text', optionsValue: 'value', value: selectedSchoolYear"></select>
            </abp-column>
            <abp-column size-md="_4" style="padding-top: 15px;">
                <select id="selectCurriculum" class="form-control" data-bind="options: curriculums, optionsText: 'name', optionsValue: 'id', value: selectedCurriculum"></select>
            </abp-column>
            <abp-column size-md="_4" class="text-right">
                <abp-button id="btnExportPDF" text="Export PDF" />
            </abp-column>
        </abp-row>
        <abp-row>
            <abp-column size-md="_12" id="column_left">
                <h5>Danh sách học phần</h5>
                <table class="table table-striped table-bordered" id="SubjectsTable">
                    <thead>
                        <tr>
                            <th>@L["ID"]</th>
                            <th>@L["Code"]</th>
                            <th>@L["Name"]</th>
                            <th>@L["Unit"]</th>
                            <th>@L["Condition"]</th>
                            <th>@L["HoursStudy"]</th>
                            <th>@L["Coefficient"]</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: subjects">
                        <tr>
                            <td data-bind="text: id"></td>
                            <td data-bind="text: code"></td>
                            <td data-bind="text: name"></td>
                            <td data-bind="text: unit"></td>
                            <td data-bind="text: condition"></td>
                            <td data-bind="text: hoursStudy"></td>
                            <td data-bind="text: coefficient"></td>
                        </tr>
                    </tbody>
                </table>
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>